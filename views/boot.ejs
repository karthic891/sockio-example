    <script type="text/javascript">
       $(document).ready(function () {
           $("#tooltip").tooltip();
       });

       function onSubmit() {
           var candidate = document.getElementById("regName").value;
           document.candidate_register.action = candidate;
       }

    </script>
  </head>
  <body class="wrapper">
    <!-- Header -->
    <div class="navbar">
      <div class="navbar-inner headerArea">
	<div class="container">
	  <a class="brand" href="#"><img src="/images/11.png" /> <strong>Linkd</strong></a>
	  <form class="form-search">
	    <div style="position: absolute; top: 1.1%;  left: 35%;">
	      <div class="input-append">
		<input type="text" class="input-xlarge search-query" placeholder="Search">
		<a href="#" class="btn"><i class="icon-search"></i></a>
	      </div>
	    </div>
	    <div class="pull-right" style="margin-top: 0.3%;">
		<a href="#" class="links add-link" id="tooltip" data-original-title="About Linkd" data-placement="bottom">About</a>
	    </div>
	  </form>
	  </div>
      </div>
    </div>

    <!-- Content Body -->
    <div class="container">
      <div class="homepage-img">
	<div style="float: right; padding-right: 10%; padding-top: 10%;">
	  <a type="button" class="btn btn-large"><i class="icon-glass"></i> Join Now!</a>
	</div>
      </div>
      <form name="candidate_register" class="form-horizontal" onsubmit="return onSubmit();"  method='POST' action='/'>
	<div class="content-left">
	  <legend>Candidate</legend>
	  <div class="control-group">
	    <label class="control-label" for="email">Candidate Name</label>
	    <div class="controls">
	      <input type="text" id="regName" name="regName" placeholder="Name">
	    </div>
	  </div>

	  <div style='color:red; text-align: center;' id='errormsg'><%= errormsg %></div>
	  <div class="control-group">
	    <div class="controls">
	      <button name="action" value="register" type="submit" class="btn"><i class="icon-user"></i> Register</button>
	    </div>
	  </div>
	  
	</div>
      </form>

